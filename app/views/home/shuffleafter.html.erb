
<div class="container">
  <%= render 'layouts/flash_messages' %>
  <h3>前回のランチ組み合わせ</h3>

  <div class="row">
    <div class="col-md-4">
      <table class="table stripe">
        <thead>
          <tr>
            <th>グループA</th>
          </tr>
        </thead>
      
        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.last == 0 %>
                <td><%= f.name %></td>
                <td><%= f.next %></td>
                <td><%= f.last %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table stripe">
        <thead>
          <tr>
            <th>グループB</th>
          </tr>
        </thead>

        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.last == 1 %>
                <td><%= f.name %></td>
                <td><%= f.next %></td>
                <td><%= f.last %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table stripe">
        <thead>
          <tr>
            <th>グループC</th>
          </tr>
        </thead>

        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.last == 2 %>
                <td><%= f.name %></td>
                <td><%= f.next %></td>
                <td><%= f.last %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>