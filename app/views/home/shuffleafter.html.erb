<div class="row mx-5 my-4">
  <h3>前回のランチ組み合わせ</h3>
</div>

  <div class="row mx-4 mt-5">
    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループA</th>
          </tr>
        </thead>

        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.last == 0 %>
                <td><%= f.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループB</th>
          </tr>
        </thead>

        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.last == 1 %>
                <td><%= f.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループC</th>
          </tr>
        </thead>

        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.last == 2 %>
