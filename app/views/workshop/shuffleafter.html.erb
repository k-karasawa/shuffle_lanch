<div class="row mx-5 my-4">
  <h3>前回のランチ組み合わせ</h3>
</div>

  <div class="row mx-4 mt-5">
    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループA 8:30 ~ 10:30</th>
          </tr>
        </thead>
      
        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.section == "製造" %>
              <td><%= f.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループB 10:30 ~ 12:30</th>
          </tr>
        </thead>

        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.k_last == 0 %>
                <td><%= f.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループC 13:30 ~ 15:30</th>
          </tr>
        </thead>

        <tbody>
          <% @shuffle.each do |f| %>
            <tr>
              <% if f.k_last == 1 %>
                <td><%= f.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>