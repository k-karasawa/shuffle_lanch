  <div class="row mx-5 my-4">
    <h3>研修組み合わせ</h3>
  </div>

  <div class="row mx-5 mt-5">
    <% if @button != "Fixed" %>
      <%= button_to 'シャッフル！ »', workshop_shuffle_path, class: 'btn btn-outline-danger mr-1',method: :get, params:{id: "shuffle"} %>
      <%= button_to 'グループ確定 »', workshop_shuffle_path, class: 'btn btn-outline-danger mx-1', method: :get, params:{id: "Fixed"} %>
    <% end %>
  </div>

  <div class="row mx-4 mt-5">
    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループA 8:30 ~ 10:30</th>
          </tr>
        </thead>
      
        <tbody>
          <% @seizou.each do |f| %>
            <tr>
                <td><%= f.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループB 10:30 ~ 12:30</th>
          </tr>
        </thead>

        <tbody>
          <% @jimu.each do |f| %>
            <tr>
              <% if f.k_next == 0 %>
                <td><%= f.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>グループC 13:30 ~ 15:30</th>
          </tr>
        </thead>

        <tbody>
          <% @jimu.each do |f| %>
            <tr>
              <% if f.k_next == 1 %>
                <td><%= f.name %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
