<div class="container">
  <%= render 'layouts/flash_messages' %>
  <h3>研修組み合わせ</h3>

  <div class="row">
    <% if @button != "Fixed" %>
      <%= button_to '再抽選する', {controller: 'workshop', action: 'shuffle'}, {method: :get, params:{id: "shuffle"}}%>
      <%= button_to 'グループ確定', {controller: 'workshop', action: 'shuffle'}, {method: :get, params:{id: "Fixed"}}%>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-4">
      <table class="table stripe">
        <thead>
          <tr>
            <th>グループA 8:30 ~ 10:30</th>
          </tr>
        </thead>
      
        <tbody>
          <% @seizou.each do |f| %>
            <tr>
                <td><%= f.name %></td>
                <td><%= f.next %></td>
                <td><%= f.last %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table stripe">
        <thead>
          <tr>
            <th>グループB 10:30 ~ 12:30</th>
          </tr>
        </thead>

        <tbody>
          <% @jimu.each do |f| %>
            <tr>
              <% if f.k_next == 0 %>
                <td><%= f.name %></td>
                <td><%= f.k_next %></td>
                <td><%= f.k_last %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table stripe">
        <thead>
          <tr>
            <th>グループC 13:30 ~ 15:30</th>
          </tr>
        </thead>

        <tbody>
          <% @jimu.each do |f| %>
            <tr>
              <% if f.k_next == 1 %>
                <td><%= f.name %></td>
                <td><%= f.k_next %></td>
                <td><%= f.k_last %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>


  </div>
</div>